@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 mb-5">

    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-dark"><strong>Welcome to Health Science Toolbox</strong></h1>
        <p class="lead text-muted">Resources designed to inspire learning, simplify teaching, and engage students in health science education.</p>
    </div>

    <div class="row mb-4">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <h2 class="fw-semibold text-secondary">About the Store</h2>
                    <hr class="w-50">
                    <p>
                        The Health Science Toolbox offers thoughtfully crafted teaching resources for educators in the health science field. From engaging activities to comprehensive lesson plans, every product is designed to keep students excited about learning while helping teachers streamline their preparation time. Whether you're teaching <strong>pharmacology, clinical rotations, or medical terminology</strong>, you'll find materials tailored to your needs.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div id="resources" class="row mb-4">
        <div class="col-lg-10 mx-auto">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body p-5">
                    <h2 class="fw-semibold text-secondary">Popular Resources</h2>
                    <hr class="w-100">
                    <div class="row">
                        <!-- Resource 1 -->
                        <div class="col-md-4 text-center mb-4">
                            <img src="path-to-resource-1-image.jpg" class="img-fluid rounded" alt="Resource 1">
                            <h4 class="mt-3">Pharmacology Worksheets</h4>
                            <p>Engaging worksheets that simplify pharmacology concepts for students.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Learn More</a>
                        </div>
                        <!-- Resource 2 -->
                        <div class="col-md-4 text-center mb-4">
                            <img src="path-to-resource-2-image.jpg" class="img-fluid rounded" alt="Resource 2">
                            <h4 class="mt-3">Medical Terminology Games</h4>
                            <p>Interactive games to reinforce essential medical terms.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Learn More</a>
                        </div>
                        <!-- Resource 3 -->
                        <div class="col-md-4 text-center mb-4">
                            <img src="path-to-resource-3-image.jpg" class="img-fluid rounded" alt="Resource 3">
                            <h4 class="mt-3">Clinical Rotations Guide</h4>
                            <p>A step-by-step guide to help students excel in clinical rotations.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
